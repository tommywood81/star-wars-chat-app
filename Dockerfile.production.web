# Production-optimized Star Wars RAG Dashboard
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY requirements.txt .

# Install optimized dependencies for production web interface
RUN pip install --no-cache-dir \
    streamlit>=1.28.0 \
    requests>=2.31.0 \
    python-dotenv>=1.0.0 \
    plotly>=5.0.0 \
    pandas>=1.5.0 \
    && pip cache purge

# Copy application code
COPY src/ ./src/
COPY *.py ./

# Create empty models directory (not needed for API client)
RUN mkdir -p models logs

# Create non-root user for security
RUN useradd -m -u 1001 starwars && \
    chown -R starwars:starwars /app
USER starwars

# Expose Streamlit port
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8501 || exit 1

# Production command with optimized settings
CMD ["streamlit", "run", "src/star_wars_rag/dashboard.py", \
     "--server.port", "8501", \
     "--server.address", "0.0.0.0", \
     "--server.headless", "true", \
     "--server.enableCORS", "false", \
     "--server.enableXsrfProtection", "true", \
     "--browser.gatherUsageStats", "false"]
